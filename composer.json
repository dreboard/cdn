{
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "vlucas/phpdotenv": "^2.4",
        "hugsbrugs/php-ftp": "^1.0",
        "nicolab/php-ftp-client": "^1.4",
        "illuminate/database": "^5.5"
    },
    "require-dev": {
      "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Main\\": ["app/","app/controllers"],
          "App\\Models\\": "app/models"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Functional\\": "tests/Functional/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public index.php",
        "test": "phpunit"
    }

}
